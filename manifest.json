{
  "name": "VocaB",
  "version": "0.0.1",
  "description": "VocaB is a chrome extension that helps you learn new words while browsing the web.",

  "manifest_version": 3,

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "index.html",
    "default_icon": "./src/img/icon.png"
  }
}
